params {

    // I/O
    bam_files   = null      // BAM input
    pod5_dir    = null      // POD5 input
    fastq_files = null      // FASTQ input
    outdir      = "./results"

    # Basecalling options (for fastplong if needed)
    basecalling_model  = "super-accurate"
    kit_name           = "SQK-LSK110"
    samtools_config = samtools.yaml

    # Fastplong options
    start_adapter      = "TTTCTGTTGGTGCTGATATTGC"
    end_adapter        = "ACTTGCCTGTCGCTCTATCTTC"
    trim_5             = false
    trim_3             = false
    mean_quality       = 20
    qualified_quality  = 15
    unqualified_percent= 40
    min_length         = 50
    fastplong_config = fastplong.yaml

}


profiles {

    conda {
        conda.enabled          = true
        docker.enabled         = false
        singularity.enabled    = false
    }

    mamba {
        conda.enabled          = true
        conda.useMamba         = true
        docker.enabled         = false
        singularity.enabled    = false
        podman.enabled         = false
        shifter.enabled        = false
        charliecloud.enabled   = false
        apptainer.enabled      = false
    }

    docker {
        docker.enabled         = true
        docker.userEmulation   = true
        conda.enabled          = false
        singularity.enabled    = false
    }

    singularity {
        singularity.enabled    = true
        singularity.autoMounts = true
        conda.enabled          = false
        docker.enabled         = false
    }


